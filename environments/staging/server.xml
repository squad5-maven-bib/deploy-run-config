<?xml version="1.0" encoding="UTF-8"?>
<server description="Struts2 Showcase 7.0.0 - Jakarta EE 9">

    <!-- Struts2 7.0.0 will use Jakarta EE 9+ (jakarta.* namespace) -->
    <featureManager>
        <feature>servlet-5.0</feature>
        <feature>pages-3.0</feature>
        <feature>cdi-3.0</feature>
        <feature>expressionLanguage-4.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint" 
                  httpPort="9080" 
                  httpsPort="9443"/>

    <!-- Deploy the WAR - buildah creates it as struts2-showcase.war -->
    <webApplication 
        id="struts2-showcase"
        name="struts2-showcase"
        location="struts2-showcase.war"
        contextRoot="/"/>
    
    <!-- Increase startup timeout for large applications -->
    <applicationManager startTimeout="5m"/>
    
    <!-- Optional: Logging configuration -->
    <logging consoleLogLevel="INFO" 
             maxFileSize="20" 
             maxFiles="10"/>

</server>
