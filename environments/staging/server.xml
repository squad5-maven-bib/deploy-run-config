<?xml version="1.0" encoding="UTF-8"?>
<server description="Struts2 Showcase 6.8.0">

    <!-- Struts2 6.8.0 requires Java EE 8 features -->
    <featureManager>
        <feature>servlet-4.0</feature>
        <feature>jsp-2.3</feature>
        <feature>cdi-2.0</feature>
        <feature>el-3.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint" 
                  httpPort="9080" 
                  httpsPort="9443"/>

    <!-- Deploy the WAR - buildah creates it as struts2-showcase.war -->
    <webApplication 
        id="struts2-showcase"
        name="struts2-showcase"
        location="struts2-showcase.war"
        contextRoot="/"/>
    
    <!-- Increase startup timeout for large applications -->
    <applicationManager startTimeout="5m"/>
    
    <!-- Optional: Logging configuration -->
    <logging consoleLogLevel="INFO" 
             maxFileSize="20" 
             maxFiles="10"/>

</server>
